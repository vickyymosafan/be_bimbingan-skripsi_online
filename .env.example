# Environment
NODE_ENV=development
PORT=3000

# Database PostgreSQL (Use Supabase/Neon for production)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_DATABASE=sibmo_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# API Configuration
API_PREFIX=api/v1
API_VERSION=1.0

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:5173

# Swagger Documentation
ENABLE_SWAGGER=true
SWAGGER_TITLE=SIBMO API - Sistem Bimbingan Tugas Akhir
SWAGGER_DESCRIPTION=REST API untuk Sistem Bimbingan Tugas Akhir Kampus
SWAGGER_VERSION=1.0
SWAGGER_PATH=api/docs

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,jpg,jpeg,png

# Email Configuration (Optional - untuk notifikasi email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@sibmo.com

# Push Notification (Optional - untuk PWA)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# Serverless Configuration
IS_SERVERLESS=false
VERCEL_URL=

# Redis (Optional - untuk caching & queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Sentry (Optional - untuk error tracking)
SENTRY_DSN=

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10
